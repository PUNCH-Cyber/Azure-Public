{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "customerName": {
            "type": "string",
            "metadata": {
                "description": "Name for the Log Analytics workspace"
            }
        }
    },
    "variables": {
        "pricingTier": "PerGB2018",
        "dailyQuota": 0,
        "dataRetention": 90,
        "immediatePurgeDataOn30Days": true,
        "securityCollectionTier": "Recommended",
        "enableDataConnectorsKind": [
            "AzureActivity",
            "AzureSecurityCenter",
            "AzureActiveDirectory"
            ],
        "enableFusionAlert": true,
        "enableMicrosoftAlerts": true,
        "enableMLAlerts": true,
        "enableScheduledAlerts": true,
        "mcasDiscoveryLogs": false,
        "_artifactsLocation": "https://raw.githubusercontent.com/Azure/Azure-Sentinel/master/Tools/",
        "location": "eastus",
        "sentienlRGName": "[concat(parameters('customerName'), '-Senitnel')]",
        "mspRegistrationName": "[guid(variables('mspOfferName'))]",
        "mspAssignmentName": "[guid(variables('mspOfferName'))]",
        "mspOfferName": "Truveta Lighthouse Delegation - Security Responder2",
        "mspOfferDescription": "Security Responder delegations for Truveta. Applies to Embassy, Production, and Shipping tenants",
        "managedByTenantId": "f7ca9621-6ba3-4d52-a241-e0ed3ea6a78a",
        "authorizations": [
            {
                "principalId": "8b9d8527-1ce0-492a-a422-c31a8c3fbbd0",
                "principalIdDisplayName": "Lighthouse-Security-Responders",
                "roleDefinitionId": "ab8e14d6-4a74-4a29-9ba8-549422addade"
            },	
            {
                "principalId": "8b9d8527-1ce0-492a-a422-c31a8c3fbbd0",
                "principalIdDisplayName": "Lighthouse-Security-Responders",
                "roleDefinitionId": "f4c81013-99ee-4d62-a7ee-b3f1f648599a"
            },
            {
                "principalId": "8b9d8527-1ce0-492a-a422-c31a8c3fbbd0",
                "principalIdDisplayName": "Lighthouse-Security-Responders",
                "roleDefinitionId": "87a39d53-fc1b-424a-814c-f7e04687dc9e"
            },
            {
                "principalId": "8b9d8527-1ce0-492a-a422-c31a8c3fbbd0",
                "principalIdDisplayName": "Lighthouse-Security-Responders",
                "roleDefinitionId": "acdd72a7-3385-48ef-bd42-f606fba81ae7"
            },	
            {
                "principalId": "8b9d8527-1ce0-492a-a422-c31a8c3fbbd0",
                "principalIdDisplayName": "Lighthouse-Security-Responders",
                "roleDefinitionId": "39bc4728-0917-49c7-9d2c-d95423bc2eb4"
            },
            {
                "principalId": "8b9d8527-1ce0-492a-a422-c31a8c3fbbd0",
                "principalIdDisplayName": "Lighthouse-Security-Responders",
                "roleDefinitionId": "91c1777a-f3dc-4fae-b103-61d183457e46"
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2020-06-01",
            "name": "[variables('sentienlRGName')]",
            "location": "[variables('location')]",
            "properties": {}
        },
        {
            "name": "workspaceCreation",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups',variables('sentienlRGName'))]"
            ],
            "resourceGroup": "[variables('sentienlRGName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(variables('_artifactsLocation'), 'Sentinel-All-In-One/MSSPversion/LinkedTemplates/workspace.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('customerName')]"
                    },
                    "pricingTier": {
                        "value": "[variables('pricingTier')]"
                    },
                    "dailyQuota": {
                        "value": "[variables('dailyQuota')]"
                    },
                    "dataRetention": {
                        "value": "[variables('dataRetention')]"
                    },
                    "immediatePurgeDataOn30Days": {
                        "value": "[variables('immediatePurgeDataOn30Days')]"
                    },
                    "location": {
                        "value": "[variables('location')]"
                    }
                }
            }
        },
        {
            "condition": "[not(empty(variables('enableDataConnectorsKind')))]",
            "name": "enableDataConnectorsKind",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "resourceGroup": "[variables('sentienlRGName')]",
            "dependsOn": [
                "workspaceCreation",
                "[resourceId('Microsoft.Resources/resourceGroups',variables('sentienlRGName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(variables('_artifactsLocation'), 'Sentinel-All-In-One/MSSPversion/LinkedTemplates/dataConnectors.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "dataConnectorsKind": {
                        "value": "[variables('enableDataConnectorsKind')]"
                    },
                    "workspaceName": {
                        "value": "[parameters('customerName')]"
                    },
                    "tenantId": {
                        "value": "[subscription().tenantId]"
                    },
                    "subscriptionId": {
                        "value": "[subscription().subscriptionId]"
                    },
                    "securityCollectionTier": {
                        "value": "[variables('securityCollectionTier')]"
                    },
                    "mcasDiscoveryLogs": {
                        "value": "[variables('mcasDiscoveryLogs')]"
                    },
                    "location": {
                        "value": "[variables('location')]"
                    }
                }
            }
        },
        {
            "condition": "[or(variables('enableFusionAlert'),variables('enableMicrosoftAlerts'),variables('enableMLAlerts'))]",
            "name": "enableAlerts",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "resourceGroup": "[variables('sentienlRGName')]",
            "dependsOn": [
                "workspaceCreation",
                "[resourceId('Microsoft.Resources/resourceGroups',variables('sentienlRGName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(variables('_artifactsLocation'), 'Sentinel-All-In-One/MSSPversion/LinkedTemplates/alertRules.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "dataConnectorsKind": {
                        "value": "[variables('enableDataConnectorsKind')]"
                    },
                    "workspaceName": {
                        "value": "[parameters('customerName')]"
                    },
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "enableFusionAlert":{
                        "value": "[variables('enableFusionAlert')]"
                    },
                    "enableMicrosoftAlerts":{
                        "value": "[variables('enableMicrosoftAlerts')]"
                    },
                    "enableMLAlerts":{
                        "value": "[variables('enableMLAlerts')]"
                    }
                }
            }
        },
        {
            "condition": "[variables('enableScheduledAlerts')]",
            "name": "enableScheduledAlerts",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "resourceGroup": "[variables('sentienlRGName')]",
            "dependsOn": [
                "enableAlerts",
                "[resourceId('Microsoft.Resources/resourceGroups',variables('sentienlRGName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(variables('_artifactsLocation'), 'Sentinel-All-In-One/MSSPversion/LinkedTemplates/scheduledAlerts.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('customerName')]"
                    },
                    "dataConnectorsList":{
                        "value": "[replace(replace(string(variables('enableDataConnectorsKind')),'\"',''),'[','')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.ManagedServices/registrationDefinitions",
            "apiVersion": "2019-06-01",
            "name": "[variables('mspRegistrationName')]",
            "properties": {
                "registrationDefinitionName": "[variables('mspOfferName')]",
                "description": "[variables('mspOfferDescription')]",
                "managedByTenantId": "[variables('managedByTenantId')]",
                "authorizations": "[variables('authorizations')]"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "lighthouseRegistrationAssignments",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.ManagedServices/registrationDefinitions/', variables('mspRegistrationName'))]",
                "[resourceId('Microsoft.Resources/resourceGroups',variables('sentienlRGName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "resources": [
                        {
                            "type": "Microsoft.ManagedServices/registrationAssignments",
                            "apiVersion": "2019-06-01",
                            "name": "[variables('mspAssignmentName')]",
                            "properties": {
                                "registrationDefinitionId": "[resourceId('Microsoft.ManagedServices/registrationDefinitions/', variables('mspRegistrationName'))]"
                            }
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "mspOfferName": {
            "type": "string",
            "value": "[concat('Managed by', ' ', variables('mspOfferName'))]"
        },
        "authorizations": {
            "type": "array",
            "value": "[variables('authorizations')]"
        },
        "workspaceName": {
            "type": "string",
            "value": "[parameters('customerName')]"
        },
        "dataConnectorsList": {
            "type": "string",
            "value": "[replace(replace(string(variables('enableDataConnectorsKind')),'\"',''),'[','')]"
        }
    }
}
